<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7B2DA"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:gravity="start"
        android:padding="20dp"
        android:textSize="25dp"
        android:background="@drawable/tv_1shape"/>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@drawable/tv_1shape"
        android:gravity="center"
        android:layout_marginTop="10dp"

        android:textSize="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_clear"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:background="@drawable/bt_shape"
                android:text="Clear"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <ImageButton
                android:id="@+id/btim_remove"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/ic_baseline_backspace_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_seven"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:text="7"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="5dp"/>
            <Button
                android:id="@+id/bt_eight"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="#000000"
                android:text="8"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/bt_nine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="#000000"
                android:text="9"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <ImageButton
                android:id="@+id/btim_divide"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/division"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_four"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="4"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/bt_five"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="5"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/bt_six"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="6"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <ImageButton
                android:id="@+id/btim_multiply"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/close"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_one"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/bt_tow"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="2"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/bt_three"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="3"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>

            <ImageButton
                android:id="@+id/btim_minus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/minus"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btim_dot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/record" />
            <Button
                android:id="@+id/bt_zero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bt_shape"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="50dp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <ImageButton
                android:id="@+id/btim_equal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/equal"
                tools:ignore="SpeakableTextPresentCheck" />
            <ImageButton
                android:id="@+id/btim_add"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/bt_shape"
                android:src="@drawable/ic_baseline_add_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>